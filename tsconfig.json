{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "target": "ES2015",
    "resolveJsonModule": true, // => import json = require json
    "paths": {
      // for display hint while coding in vscode
      "assets/*": ["src/assets/*"],
      "src/*": ["src/*"]
    },
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "src/custom.d.ts"]
}
